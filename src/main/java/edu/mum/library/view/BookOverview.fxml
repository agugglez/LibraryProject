      <Button layoutX="110.0" layoutY="524.0" mnemonicParsing="false" onAction="#handleNewPerson" text="New..." />
      <Button layoutX="267.0" layoutY="524.0" mnemonicParsing="false" onAction="#handleEditPerson" text="Edit..." />
      <TextField fx:id="searchFilter" layoutX="164.0" layoutY="14.0" onInputMethodTextChanged="#refresh" onKeyReleased="#refresh" onKeyTyped="#refresh" />
